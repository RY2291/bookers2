<table class='table'>
 <tr><%= attachment_image_tag user,:profile_image, :fill, 40, 40, format: "jpg", fallback: "no_image.jpg" %></tr>
 <tr>
  <th><h4>name</h4></th>
  <%#ログインしているユーザーを表示%>
  <th><%= user.name %></th>
 </tr>
 <tr>
  <th><h4>introduction</h4></th>
  <%#ログインしているユーザーを表示%>
  <th><%= user.introduction %></th>
 </tr>
 <tr>
  <th><h4>follows</h4></th>
  <th><%= link_to user.following.count, followings_user_path(user.id) %></th>
 </tr>
 <tr>
  <th><h4>foolwers</h4></th>
  <th><%= link_to user.follower.count, followers_user_path(user.id) %></th>
 </tr>
</table>

 <div class='row'>
  <% unless user == current_user %>
   <% if current_user.following?(user) %>
    <%= link_to "フォローを外す", user_relationships_path(user), method: :delete, class: "btn btn-primary" %>
   <% else %>
    <%= link_to "フォロー", user_relationships_path(user), method: :post, class: "btn btn-success" %>
   <% end %>
  <% end %>
  <%= link_to edit_user_path(user), class:"btn btn-outline-secondary btn-block fas fa-user-cog" do %>
   <i class="fas fa-user-cog"></i>
  <% end %>
 </div>