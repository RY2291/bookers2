<h1>User info</h1>
<p><%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: "jpg", fallback: "no_image.jpg" %></p>
<h4>name</h4>
<%= @users.name %>
<h4>introduction</h4>
<%= @users.introduction %>

<p><%= link_to "マイページ", edit_user_path(@users.id) %></p>

<h1>New book</h1>

<%= form_with model: @book, local:true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Body</h4>
  <%= f.text_area :body %>
  <p><%= f.submit "Create Book" %></p>
<% end %>

