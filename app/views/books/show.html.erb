<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
     <h1>User info</h1>
     <%= render "users/info", user: @user %>
     <h2 class="mt-3">New book</h2>
     <%= render "form", book: @book_new %>
    </div>
    <div class='col-md-8 offset-md-1'>
     <h2>Book detail</h2>
     <table class='table'>
      <tbody>
        <tr>
          <td><%= link_to user_path(@user.id) do %>
             <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: "jpg", fallback: "no_image.jpg" %>
             <%= @user.name %>
             <% end %>
          </td>
          <td><%= link_to @book.title, book_path(@book.id) %></td>
          <td><%= @book.body %></td>
          <%# 変数が左辺、データなどの値が右辺　%>
          <% if @user == current_user %>
           <td><%= link_to "Edit", edit_book_path %></td>
           <td><%= link_to "Destroy", book_path, method: :delete, data: {confirm: "本当に消しますか？"} %></td>
          <% end %>
          <td>コメント数：<%= @book.book_comments.count %> </td>
        </tr>
      </tbody>
     </table>
     <% @book.book_comments.each do |comment| %>
      <%= link_to user_path(@user.id) do %>
       <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: "jpg", fallback: "no_image.jpg" %>
       <p><%= @user.name %></p>
      <% end %>
      <p><%= comment.comment %></p>
      <p><%= link_to "Destroy", book_book_comment_path(@book.id, comment.id), method: :delete %>
     <% end %>
     <div>
      <%= form_with(model:[@book, @book_comment], local: true) do |f| %>
       <%= f.text_area :comment, rows:"5" %>
       <%= f.submit "送信" %>
      <% end %>
     </div>
    </div>
</div>