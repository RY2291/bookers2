<h1>New book</h1>

<%= form_with model: @book, local:true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Body</h4>
  <%= f.text_area :body %>
  <p><%= f.submit "Create Book" %></p>
<% end %>

<h1>Book detail</h1>
<%=link_to user_path(@user.id) do %>
  <p><%= @user.name %></p>
<% end %>
<%= link_to book_path(@book.id) do %>
  <p><%= @book.title %></p>
<% end %> 
<p><%= @book.body %></p>
<%= link_to "Edit", edit_book_path(@book.id) %>
<%= link_to "Destroy", book_path(@book), method: :delete %>
