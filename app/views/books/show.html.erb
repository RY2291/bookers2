<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
     <h1>User info</h1>
     <table class='table'>
       <tr><%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: "jpg", fallback: "no_image.jpg" %></tr>
       <tr>
        <th><h4>name</h4></th>
        <th><%= @user.name %></th>
       </tr>
       <tr>
        <th><h4>introduction</h4></th>
        <th><%= @user.introduction %></th>
       </tr>
      </table>

     <div class='row'>
      <%= link_to edit_user_path(@user.id), class:"btn btn-outline-secondary btn-block fas fa-user-cog" do %>
       <i class="fas fa-user-cog"></i>
      <% end %>
     </div>

     <h2 class="mt-3">New book</h2>

     <%= form_with model: @book_new, local:true do |f| %>
       <div class="form-group">
        <label for="book_title">Title</label>
        <p><%= f.text_field :title %></p>
       </div>
       <div class="form-group">
        <label for="book_title">Opinion</label>
        <p><%= f.text_area :body %></p>
       </div>
       <div class="form-group">
        <p><%= f.submit "Create Book" %></p>
       </div>
     <% end %>
    </div>
    <div class='col-md-8 offset-md-1'>
     <h2>Book detail</h2>
     <table class='table'>
      <tbody>
        <tr>
          <td>
              <%= link_to user_path(@user.id) do %>
               <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: "jpg", fallback: "no_image.jpg" %>
               <%= @user.name %>
              <% end %>
          </td>
          <td><%= link_to @book.title, book_path(@book.id) %></td>
          <td><%= @book.body %></td>
          <%# 変数が左辺、データなどの値が右辺　%>
          <% if @user == current_user %>
           <td><%= link_to "Edit", edit_book_path %></td>
           <td><%= link_to "Destroy", book_path, method: :delete, data: {confirm: "本当に消しますか？"} %></td>
          <% end %>
        </tr>
      </tbody>
     </table>
    </div>
</div