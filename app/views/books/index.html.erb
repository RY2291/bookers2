<h1>User info</h1>
<h4>name</h4>
<%#ログインしているユーザーを表示%>
<%= current_user.name %>
<h4>introduction</h4>
<%#ログインしているユーザーを表示%>
<%= current_user.introduction %>
<%#ログインしているユーザーを表示%>
<p><%= link_to "マイページ", edit_user_path(current_user) %></p>

<h1>New book</h1>

<%= form_with model: @book, local:true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Opinion</h4>
  <%= f.text_area :body %>
  <p><%= f.submit "Create Book" %></p>
<% end %>

<h1>Books</h1>
<% @books.each do |book| %>
<%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: "jpg", fallback: "no_image.jpg" %>
 <h4>Title</h4>
 <%= book.title %>
 <h4>Body</h4>
 <%= book.body %>
<% end %>