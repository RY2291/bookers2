<% if @book.errors.any? %>
 <%= @book.errors.count %>
 <% @book.errors.full_messages.each do |message| %>
  <%= message %>
 <% end %>
<% end %>

<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
     <h1>User info</h1>
     <table class='table'>
       <tr><%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: "jpg", fallback: "no_image.jpg" %></tr>
       <tr>
        <th><h4>name</h4></th>
        <%#ログインしているユーザーを表示%>
        <th><%= current_user.name %></th>
       </tr>
       <tr>
        <th><h4>introduction</h4></th>
        <%#ログインしているユーザーを表示%>
        <th><%= current_user.introduction %></th>
       </tr>
       <%#ログインしているユーザーを表示%>
      </table>
      
     <div class='row'>
      <p><%= link_to edit_user_path(current_user), class:"btn btn-outline-secondary btn-block fas fa-user-cog" do %>
          <i class="fas fa-user-cog"></i>
         <% end %>
      </p>
     </div>
     
     <h2 class="mt-3">New book</h2>
     
     <%= form_with model: @book, local:true do |f| %>
       <div class="form-group">
        <label for="book_title">Title</label>
        <p><%= f.text_field :title %></p>
       </div>
       <div class="form-group">
        <label for="book_title">Opinion</label>
        <p><%= f.text_area :body %></p>
       </div>
       <div class="form-group">
        <p><%= f.submit "Create Book" %></p>
       </div>
     <% end %>
    </div>
    <div class='col-md-8 offset-md-1'>  
     <h1>Books</h1>
     <table class='table table-hover table-inverse'>
      <thead>
       <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
        <th colspan="3"></th>
       </tr>
      </thead>
      <tbody>
       <% @books.each do |book| %>
        <tr>
          <td><%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: "jpg", fallback: "no_image.jpg" %></td>
          <td><%= link_to book.title, book_path(book.id) %></td>
          <td><%= book.body %></td>
        </tr>
       <% end %>
      </tbody>
     </table>
    </div>
</div>
