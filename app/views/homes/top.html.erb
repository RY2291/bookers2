<h1>トップページ</h1>

<h1>User info</h1>
<%= attachment_image_tag @user, :image %>
<h4>name</h4>
<%= @user.name :name %>
<h4>introduction</h4>
<%= @user.introduction :introduction %>

<h1>New book</h1>

<%= form_with model: @book, local:true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  <h4>Body</h4>
  <%= f.text_area :body %>
  <p><%= f.submit "Create Book" %></p>
<% end %>